<?xml version="1.0" encoding="UTF-8"?>
<configuration>

    <springProperty scope="context" name="solarWindsToken" source="solarwinds.log.token"/>

    <include resource="org/springframework/boot/logging/logback/base.xml"/>

    <appender name="SOLARWINDS" class="com.cooknect.nutrition_service.logging.SolarWindsHttpAppender">
        <url>https://logs.collector.ap-01.cloud.solarwinds.com/v1/logs</url>
        <token>${solarWindsToken}</token>
        <encoder class="net.logstash.logback.encoder.LogstashEncoder"/>
    </appender>

    <root level="INFO">
        <appender-ref ref="CONSOLE"/>
        <appender-ref ref="SOLARWINDS"/>
    </root>

</configuration>